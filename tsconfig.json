{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["dom", "ES2019"],
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
